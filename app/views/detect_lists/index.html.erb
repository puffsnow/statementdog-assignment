<%= link_to 'create list', new_detect_list_path %>

<hr>

<% @detect_lists.each do |detect_list| %>
  <h3><%= detect_list.name %></h3>
  <%= link_to 'update list', edit_detect_list_path(detect_list) %>
  <%= link_to 'add list stock', new_detect_list_detect_item_path(detect_list) %>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>code</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      <% detect_list.display_detect_items.each_with_index do |detect_item, index| %>
        <tr>
          <td><%= detect_item.stock.name %></td>
          <td><%= detect_item.stock.code %></td>
          <td>
            <%= index > 0 ? link_to('up', move_detect_item_path(detect_item, direction: 'up')) : 'up' %>
            <%= index < detect_list.display_detect_items.length - 1 ? link_to('down', move_detect_item_path(detect_item, direction: 'down')) : 'down' %>
          </td>
        <tr>
      <% end %>
    </tbody>
  </table>
  <hr>
<% end %>
